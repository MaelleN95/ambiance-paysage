{% extends 'base.html.twig' %}

{% block title %}Hello GalleryController!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/before-after-photo.css') }}">
{% endblock %}

{% block body %}

<h2> Galerie photos</h2>

<h3>Avant / Après</h3>

{% for beforeAfterPhotos in beforeAfterPhotosList %}
    {% include 'partials/_before-after-photo.html.twig' with {'beforeAfterPhotos': beforeAfterPhotos} %}
{% endfor %}

<a href="{{ path('app_gallery_more', {'category': 'before_after'}) }}">Voir plus</a>


<h3>En plein travail</h3>

{% for workInProgressPhoto in workInProgress %}
    <div class="work-in-progress-photo">
        <img src="{{ asset('uploads/photos/' ~ workInProgressPhoto.image) }}" alt="Photo en cours de réalisation">
    </div>
{% endfor %}

<a href="{{ path('app_gallery_more', {'category': 'work_in_progress'}) }}">Voir plus</a>

<h3>Oeuvres finies</h3>

{% for finishedPhoto in finished %}
    <div class="finished-photo">
        <img src="{{ asset('uploads/photos/' ~ finishedPhoto.image) }}" alt="Photo d'une oeuvre finie">
    </div>
{% endfor %}

<a href="{{ path('app_gallery_more', {'category': 'finished'}) }}">Voir plus</a>

{% endblock %}
